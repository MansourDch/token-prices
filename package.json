  "description": "A Towns Protocol bot that fetches and displays cryptocurrency token prices in real-time",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "start": "bun src/index.ts",
    "build": "bun build src/index.ts --outdir dist",
    "test": "bun test",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src"
  },
  "dependencies": {
    "towns-sdk": "^1.0.0",
    "axios": "^1.6.0",
    "dotenv": "^16.0.0",
    "sqlite3": "^5.1.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.0.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "keywords": [
    "towns",
    "protocol",
    "bot",
    "crypto",
    "prices",
    "token",
    "sdk"
  ],
